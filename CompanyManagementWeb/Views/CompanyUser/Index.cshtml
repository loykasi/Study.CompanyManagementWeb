        function deleteUser(userId) {
            console.log('call post');
            $.ajax({
                type: 'post',
                url: '@Url.Action("Delete")',
                data: {
                    userId: userId
                },
                success: function (response) {
                    $('#content').html(response);
                    console.log(response);
                },
                error: function (response, status, error) {
                    console.log(status);
                },
            });
        }
    </script>
