@model CompanyManagementWeb.ViewModels.RoleCreateViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Role</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Tên</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Quyền</label>
                @for (int i = 0; i < Model.RoleDetails.Count; i++)
                {
                    <dt class = "col-sm-2">
                        @Model.RoleDetails[i].Resource
                    </dt>
                    <dd class = "col-sm-10">
                        <input type="hidden" asp-for="@Model.RoleDetails[i].ResourceId" />
                        <select asp-for="@Model.RoleDetails[i].PermissionId" class ="form-control">
                            @foreach (var permission in Model.RoleDetails[i].Permissions)
                            {
                                <option value="@permission.Value">@permission.Text</option>
                            }
                        </select>
                    </dd>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
