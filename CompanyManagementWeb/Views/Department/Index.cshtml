@model IEnumerable<CompanyManagementWeb.Models.Department>
@inject CompanyManagementWeb.Services.IUserService userService

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between my-3">
    <h2 class="m-0 align-bottom">Phòng ban</h2>
    @if (await userService.IsInPermission("Department", "Edit"))
    {
        <a class="m-0 align-bottom btn btn-secondary" asp-action="Create">Tạo phòng ban</a>
    }
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Tên phòng ban
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="">
                @if (await userService.IsInPermission("Department", "Edit"))
                {
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2 float-end">Chỉnh sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2 float-end">Xóa</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
