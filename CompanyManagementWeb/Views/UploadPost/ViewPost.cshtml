@model CompanyManagementWeb.ViewModels.PostSearchViewModel

@{
    ViewData["Title"] = "Create new post";
}

<h1>Thông báo</h1>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Search">
            <div class="form-group">
                <label asp-for="SearchValue" class="control-label">Search</label>
                <input asp-for="SearchValue" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="FromDate" class="control-label">From date</label>
                <input asp-for="FromDate" type="datetime-local" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ToDate" class="control-label">To date</label>
                <input asp-for="ToDate" type="datetime-local" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@foreach (var item in Model.Posts)
{
    <div class="border">
        <div>@item.Title</div>
        <div>@item.Content</div>
        <div>@item.CreatedDate</div>
        <div>@item.Employee.Name</div>
    </div>
}
